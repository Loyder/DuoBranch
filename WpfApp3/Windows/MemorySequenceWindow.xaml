<Window x:Class="WpfApp3.Windows.MemorySequenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Последовательность!"
        Height="350"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="30">
            <TextBlock x:Name="StageTextBlock"
                       FontSize="20"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="TaskTextBlock"
                       FontSize="18"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="SequenceTextBlock"
                       FontSize="28"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,10,0,10"/>
            <TextBox x:Name="AnswerTextBox"
                     FontSize="18"
                     Margin="0,0,0,10"
                     HorizontalAlignment="Center"
                     Width="180"/>
            <Button x:Name="SubmitButton"
                    Content="Ответить"
                    FontSize="18"
                    Width="120"
                    Click="OnSubmit"/>
            <TextBlock x:Name="ResultTextBlock"
                       FontSize="18"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>