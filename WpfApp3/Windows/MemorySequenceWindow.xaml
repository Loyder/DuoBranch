<Window x:Class="WpfApp3.Windows.MemorySequenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Повтори последовательность" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Введите последовательность (вам покажут на секунду):" Margin="0,0,0,10"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,0,0,10"/>
        <Button Content="Ответить" Click="OnSubmit"/>
    </StackPanel>
</Window>