<Window x:Class="WpfApp3.Windows.OddOneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Что лишнее?" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Что лишнее: Кот, Собака, Волк, Слон?" Margin="0,0,0,10"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,0,0,10"/>
        <Button Content="Ответить" Click="OnSubmit"/>
    </StackPanel>
</Window>