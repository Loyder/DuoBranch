<Window x:Class="WpfApp3.DoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pixel Doom"
        Height="480"
        Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/ImagesDoom/doom_eternal_icon_245652.png"
        Loaded="Window_Loaded">
    <Canvas x:Name="GameCanvas">
        <Canvas.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#232526" Offset="0"/>
                <GradientStop Color="#414345" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <TextBlock x:Name="WaveText"
                   Canvas.Left="10"
                   Canvas.Top="10"
                   FontSize="22"
                   Foreground="White"
                   FontWeight="Bold"
                   Text="Волна: 1"/>
        <TextBlock x:Name="LivesText"
                   Canvas.Left="10"
                   Canvas.Top="40"
                   FontSize="18"
                   Foreground="White"
                   FontWeight="Bold"
                   Text="Жизни: 3"/>
    </Canvas>
</Window>