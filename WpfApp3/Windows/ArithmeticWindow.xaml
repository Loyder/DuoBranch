<Window x:Class="WpfApp3.Windows.ArithmeticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Арифметика" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Вычислите: 15 + 28 = ?" Margin="0,0,0,10"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,0,0,10"/>
        <Button Content="Ответить" Click="OnSubmit"/>
    </StackPanel>
</Window>